= simple_form_for(resource_for(:registrations), :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'signup-form'}) do |f|
  %fieldset 
    %legend
      %h2 New to Jourmie?
      %h3 Sign up here
    = f.input :email, :placeholder => 'E-mail', :autofocus => (true if controller_name == "registrations"), :required => true, :label => false
    - if f.object.provider.blank?
      = f.input :password, :placeholder => "Password", :required => true, :label => false
      = f.input :password_confirmation, :placeholder => "Repeat password", :required => true, :label => false
    %p{ :style => "font-size: 12px; font-weight: bold;" }
      By creating account I accept Jourmie's
      = link_to "Terms of service", "#"
      and 
      = link_to "Privacy Policy", "#"
      \.
    .pull-right
      = f.submit :class => 'btn btn-primary', :value => "Sign up"
    .clearfix

