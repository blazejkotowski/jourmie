= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'signup-form'}) do |f|
  %fieldset 
    %legend
      %h2 New to Jourmie?
      %h3 Sign up here
    = f.input :email, :placeholder => 'E-mail', :required => true, :autofocus => true, :label => false
    = f.input :password, :placeholder => "Password", :required => true, :label => false
    = f.input :password_confirmation, :placeholder => "Repeat password", :required => true, :label => false
    %p
      By creating account I accept Jourmie's
      = link_to "Terms of service", "#"
      and 
      = link_to "Privacy Policy", "#"
      \.
    .pull-right
      = f.submit :class => 'btn btn-primary', :value => "Sign up"
    .clearfix
    
= render "devise/shared/links"
        
