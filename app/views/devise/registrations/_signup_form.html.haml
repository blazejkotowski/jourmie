= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-horizontal' }) do |f|
  %fieldset
    %legend= I18n.t("custom_translations.sign up", :default => "sign up").capitalize
    = f.input :email, :label => 'E-mail', :required => true, :autofocus => true
    = f.input :password, :label => I18n.t('custom_translations.password', :default =>'password').capitalize, :required => true
    = f.input :password_confirmation, :label => I18n.t('custom_translations.repeat password', :default =>'repeat password').capitalize, :required => true
    %div.form-actions
      = f.submit :class => 'btn btn-primary', :value => I18n.t('custom_translations.sign up', :default =>'sign up').capitalize
    
= render "devise/shared/links"
        
