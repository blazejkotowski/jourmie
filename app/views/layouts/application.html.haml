!!!
%html{ "xmlns:fb" => "http://ogp.me/ns/fb#" }
  %head
    %title= full_page_title(yield(:title))
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
%body{ :class => ("home" if action_name == 'home') }
  %nav
    #navigation-top.navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          .pull-left
            .brand= link_to "JOURMIE", root_path
          .pull-right
            %ul.nav
              - unless user_signed_in?
                %li= link_to "Sign up", new_user_registration_path
                %li= link_to "Sign in", new_user_session_path
              - else
                %li.dropdown
                  = link_to edit_user_registration_path, :class => "dropdown-toggle", :data => { :toggle => "dropdown", :target => '#' } do
                    = current_user.email
                    %b.caret
                  %ul.dropdown-menu{ :role => "menu" }
                    %li= link_to "Profile", edit_user_registration_path
                    %li= link_to "Sign out", destroy_user_session_path, :method => :delete
                
              
      - if flash.empty?
        .navbar-notification
          .container
      - else
        - flash.each do |type, message|
          .navbar-notification{ :class => "notification-#{type}"}
            = message
  #main-container
    = yield
    .container
      - if Rails.env.development?
        = debug(params)
          
  %footer
    .navbar.navbar-inverse.navbar-static-top
      .navbar-inner
        .container
          .pull-left
            %ul.nav
              %li= link_to "Help", "#"
              %li= link_to "About", "#"
              %li= link_to "Blog", "#"
              %li= link_to "Jobs", "#"
              %li= link_to "Privacy", "#"
              %li= link_to "Terms", "#"
          .pull-right
            %p.navbar-text
              Jourmie.com
              &copy;
              = Date.today.year
              All rights reserved
      
